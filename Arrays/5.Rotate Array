public class Solution {
	public static ArrayList<Integer> rotateArray(ArrayList<Integer> arr, int k) {
        // Write your code here.
        int temp=0;

        ArrayList<Integer> newArray=new ArrayList<>();
        for(int i=k;i<arr.size();i++)
        {
           newArray.add(arr.get(i));
        }
        for(int i=0;i<k;i++)
        {
            newArray.add(arr.get(i));
        }

        return newArray;
    }
}
