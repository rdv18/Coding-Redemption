/*


*/

class Solution {
    public int findKthLargest(int[] nums, int k) {

        PriorityQueue<Integer> queue = new PriorityQueue<>(Collections.reverseOrder());

        for (int i = 0; i < nums.length; i++) {
            queue.add(nums[i]);
        }
        int j = 0;
        int res = 0;

        while (j != k) {
            j++;
            res = queue.poll();

        }

        return res;
    }
}
